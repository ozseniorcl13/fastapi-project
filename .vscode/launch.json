    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:api",
                "--app-dir",
                "${workspaceFolder}/src",
                "--reload",
                "--port",
                "5000"                
            ],
            "env": {
                "KUBE_CONFIG_DEFAULT_LOCATION": "~/.kube/config",
                "KUBE_CONFIG_DEFAULT_CONTEXT": "minikube"
            },
            "jinja": true,
            "justMyCode": true
        }
    ]
}